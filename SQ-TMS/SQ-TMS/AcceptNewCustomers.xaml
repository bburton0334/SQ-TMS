<Page x:Class="SQ_TMS.AcceptNewCustomers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SQ_TMS"
      mc:Ignorable="d" 
      d:DesignHeight="380" d:DesignWidth="630"
      Title="AcceptNewCustomers">

    <Grid>
        <DataGrid x:Name="gridNewCustomers" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="200" Margin="40,0,0,0" VerticalAlignment="Top" Width="480" Background="#FF373737" BorderBrush="#FFABADB3" AlternatingRowBackground="#FF343434" AreRowDetailsFrozen="True" BorderThickness="2"/>
        <TextBox x:Name="txtCustomerName" HorizontalAlignment="Left" Height="25" Margin="40,240,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="140" Background="#FFA5A5A5" SelectionBrush="#FF0003E7" FontFamily="Agency FB"/>
        <Label Content="Enter Customer Name" HorizontalAlignment="Left" Margin="40,216,0,0" VerticalAlignment="Top" Width="140" Foreground="LightGray" FontFamily="Agency FB"/>
        <Button Click="btnAcceptCustomer_Click" x:Name="btnAcceptCustomer" Content="Accept This Customer" HorizontalAlignment="Left" Margin="220,240,0,0" VerticalAlignment="Top" Width="120" Height="25" Background="#FFABADB3" FontFamily="Agency FB"/>
    </Grid>
</Page>
